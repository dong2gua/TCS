<ctrl:NoGdiWindow x:Class="ThorCyte.MainWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:ThorCyte.Infrastructure.Commom;assembly=ThorCyte.Infrastructure"
        xmlns:controls="clr-namespace:ThorCyte.Infrastructure.Controls;assembly=ThorCyte.Infrastructure"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ctrl="clr-namespace:System.Windows.Controls;assembly=ThorCyte.Infrastructure"
        xmlns:local="clr-namespace:ThorCyte"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" 
        UsesWindowsFormsHost="False"
        Title="ThorCyte" Height="600" Width="600" MinWidth="600" MinHeight="600" 
        Icon="Icons/ThorCyte.ico" Background="{x:Null}" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="shell:WindowChrome.WindowChrome">
                <Setter.Value>
                    <shell:WindowChrome CaptionHeight="0"
                                        CornerRadius="0"
                                        GlassFrameThickness="0"
                                        NonClientFrameEdges="None"
                                        ResizeBorderThickness="4"
                                        />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="2,2,5,2" >
    <Border>
        <Grid Background="#444444" >
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="102"/>-->
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="0,0,0,0" Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="0,0,0,1"  BorderBrush="DodgerBlue"  Margin="1,1,1,0" />
        <Grid Grid.Row="0" Background="#333333">

            <TextBlock VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Text="ThorCyte"
                               Margin="4,8,4,4"
                               FontSize="16"
                               Foreground="White"
                               />
            <Grid MouseLeftButtonDown="Header_MouseLeftButtonDown"
                          Background="Transparent"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Stretch"
                          Height="32"
                          Margin="100 0 0 0" />
            <DockPanel>
                <ContentControl regions:RegionManager.RegionName="{x:Static inf:RegionNames.HeadRegion}" DockPanel.Dock="Left"/>            
                <StackPanel DockPanel.Dock="Right"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="4">
                            <controls:HyperlinkImage  HorizontalAlignment="Right" Height="19" Width="120" Margin="0,3,10,0" Source="Icons/ThorlabsLogo.png" 
                                                      ToolTip="Link to Thorlabs.com" NavigateUri="http://www.thorlabs.com"/>
                    
                        <Button ToolTip="Minimize"
