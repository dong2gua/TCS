<UserControl x:Class="ThorCyte.ProtocolModule.Views.Modules.ImageViewModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:ThorCyte.ProtocolModule.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Expander Header="ImageView" IsExpanded="True">
        <Grid Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Title :" Margin="2"/>
            <TextBox Grid.Column="1" Margin="2" >
                <TextBox.Text>
                    <Binding Path ="ImageTitle" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True" ValidatesOnNotifyDataErrors="True" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <utils:RequireNotEmptyValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
    </Expander>
</UserControl>
