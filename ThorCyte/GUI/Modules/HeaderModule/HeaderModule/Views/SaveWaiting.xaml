<Window x:Class="ThorCyte.HeaderModule.Views.SaveWaiting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ThorCyte.Infrastructure.Controls;assembly=ThorCyte.Infrastructure"
             mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None"  AllowsTransparency="True" Background="Transparent" Closing="Window_Closing" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner"
             d:DesignHeight="300" d:DesignWidth="350" >
    <Grid>
        <Border CornerRadius="5" Height="36" BorderBrush="Black" BorderThickness="1" Background="#444444" Width="350">
            <Border.Effect>
                <DropShadowEffect Color="Black"></DropShadowEffect>
            </Border.Effect>
            <Grid VerticalAlignment="Center">
                <controls:GifImage Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <TextBlock Name="tbPrompt" VerticalAlignment="Center" Foreground="#EFEFEF" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,7">Saving...</TextBlock>
            </Grid>
        </Border>
        
    </Grid>
</Window>
