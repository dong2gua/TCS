<ctrl:CustomWindow x:Class="ThorCyte.GraphicModule.Views.NewOverlayWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:System.Windows.Controls;assembly=ThorCyte.Infrastructure"
        xmlns:models="clr-namespace:ThorCyte.GraphicModule.Models"
        xmlns:controls="clr-namespace:ThorCyte.GraphicModule.Controls"
        Title="Overlay Properties"
        Width="300"  Height="200" Loaded="WndLoaded">
    <Window.Resources>
        <ResourceDictionary>
            <models:OverlayInfo x:Key="OverlayModel"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resource/Styles/ColorPickerStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="2" Content="Name :"/>
        <TextBox x:Name="TbName" Grid.Row="0" Grid.Column="1" Margin="2" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="30" Text="{Binding Source={StaticResource OverlayModel},Path=OverlayName}" TextChanged="OnTextChanged"/>

        <Label Grid.Row="1" Grid.Column="0" Margin="2" VerticalAlignment="Center" Content="Color :"/>
        <controls:ComColor  Grid.Row="1" Grid.Column="1" Margin="2" Height="30" VerticalAlignment="Center"  ColorList="{Binding Source={StaticResource OverlayModel}, Path=ColorList}" SelectedColor="{Binding Source={StaticResource OverlayModel}, Path=CurrentColorInfo,Mode=TwoWay}" />

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="OkBtn" Grid.Column="0" Margin="5,0" Content="Ok" Click="OnOk"/>
            <Button Grid.Column="1" Margin="5,0" Content="Cancle" IsCancel="True"/>
        </Grid>
    </Grid>
</ctrl:CustomWindow>
