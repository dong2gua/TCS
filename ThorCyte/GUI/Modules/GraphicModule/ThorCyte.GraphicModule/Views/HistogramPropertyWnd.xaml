<UserControl x:Class="ThorCyte.GraphicModule.Views.HistogramPropertyWnd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:ThorCyte.GraphicModule.Views"
             mc:Ignorable="d" Width="260">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="2,0">
            <Expander Header="Axis" IsExpanded="True">
                <views:AxisTab Margin="0"/>
            </Expander>

            <Expander Header="Event Type" IsExpanded="True">
                <views:EventTypeTab Margin="2,0,0,0"/>
            </Expander>

            <Expander Header="General" IsExpanded="True">
                <views:HistogramGeneralTab Margin="2,0,0,0"/>
            </Expander>

            <Expander Header="Overlays" IsExpanded="True">
                <views:OverLaysTab Margin="2,0,0,0"/>
            </Expander>

            <Expander Header="RegionTool" IsExpanded="True">
                <views:RegionTool Margin="2,0,0,0"/>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
