<UserControl x:Class="ThorCyte.GraphicModule.Views.HistogramPropertyWnd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:ThorCyte.GraphicModule.Views"
             mc:Ignorable="d" Width="260">
    <StackPanel>
        <Expander Header="Axis" IsExpanded="True">
             <views:AxisTab/>
         </Expander>

        <Expander Header="Event Type" IsExpanded="True">
            <views:EventTypeTab/>
        </Expander>
        
        <Expander Header="General" IsExpanded="True">
            <views:HistogramGeneralTab/>
        </Expander>

        <Expander Header="Overlays" IsExpanded="True">
            <views:OverLaysTab/>
        </Expander>

        <Expander Header="RegionTool" IsExpanded="True">
             <views:RegionTool/>
        </Expander>
    </StackPanel>
</UserControl>
