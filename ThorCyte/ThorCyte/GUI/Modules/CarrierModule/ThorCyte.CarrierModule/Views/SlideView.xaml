<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:canvases="clr-namespace:ThorCyte.CarrierModule.Canvases"
        x:Class="ThorCyte.CarrierModule.Views.SlideView"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
    <Expander Header="{Binding CarrierDescription, ElementName=slideCanvas}" IsExpanded="True">
        <StackPanel>
            <Grid x:Name="CanvGrid" Background="DimGray">
                <canvases:SlideCanvas x:Name="slideCanvas" HorizontalAlignment="Center" Focusable="True" VerticalAlignment="Center" Margin="20" 
                                  OuterHeight="{Binding ElementName=CanvGrid,Path=ActualHeight}"
                                  OuterWidth="{Binding ElementName=CanvGrid,Path=ActualWidth}"/>
            </Grid>
            <Grid>
                <StatusBar DockPanel.Dock="Bottom" Height="24">
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Position:  "/>
                            <TextBlock Width="89" Text="{Binding MousePosition, ElementName=slideCanvas, Mode=TwoWay}"/>
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </StackPanel>
    </Expander>
</UserControl>

