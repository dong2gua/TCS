<Window x:Name="mainWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:ThorCyte.Infrastructure.Commom;assembly=ThorCyte.Infrastructure"
        x:Class="TestCarrier.MainWindow"
        Title="MainWindow" Width="500" Height="600" Style ="{StaticResource {x:Type Window}}">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Content="Open" Command="{Binding OpenCommnad}"/>

            <!--<Button Content="Start" Command="{Binding MacroStartCommand}"/>
            <Button Content="End" Command="{Binding MacroFinishCommand}"/>-->

            <Button Content="Review" Command="{Binding ModeCommand}" CommandParameter="Review"/>
            <Button Content="Analysis" Command="{Binding ModeCommand}" CommandParameter="Analysis"/>            
        </ToolBar>

        <ContentControl Grid.Row="1"  x:Name="MainRegionRev" regions:RegionManager.RegionName="{x:Static inf:RegionNames.ReviewCarrierRegion}"/>
    </Grid>
</Window>
