<UserControl x:Class="ThorCyte.ProtocolModule.Views.Modules.ContourModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converts="clr-namespace:ThorCyte.ProtocolModule.Converts"
             xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:utils="clr-namespace:ThorCyte.ProtocolModule.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converts:AreaTypeConvert x:Key="AreaCvt"/>

        <ControlTemplate x:Key="CtTextBoxRequired">
            <DockPanel>
                <AdornedElementPlaceholder/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="StyleTextBoxError" TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="10,5,20,5" />
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
					Value="{Binding RelativeSource={x:Static RelativeSource.Self},Path=(Validation.Errors)[0].ErrorContent}" />
                    <Setter Property="Background"  Value="Orange" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </UserControl.Resources>
    <Expander Header="Contour" IsExpanded="True">
        <StackPanel>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Margin="2" Content="Component name :"/>
                <TextBox x:Name="TxtConponent"  Grid.Column="1" Margin="2" Validation.ErrorTemplate="{StaticResource CtTextBoxRequired}" Style="{StaticResource StyleTextBoxError}" PreviewGotKeyboardFocus="txt_ConponentFocus">
                    <TextBox.Text>
                        <Binding Path="ComponentName" UpdateSourceTrigger="PropertyChanged" >
                            <Binding.ValidationRules>
                                <utils:RequiredValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </Grid>
            <GroupBox Header="Min area">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <xctk:DoubleUpDown Grid.Column="0" Margin="2" AllowTextInput="True" Value="{Binding MinArea}" Minimum="0" Maximum="999999" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <RadioButton Content="um²" Grid.Column="0" Margin="2"
                             IsChecked="{Binding MinAreaUnit,Converter={StaticResource AreaCvt},ConverterParameter=um}"/>
                        <RadioButton Content="mm²" Grid.Column="1" Margin="2"
                             IsChecked="{Binding MinAreaUnit,Converter={StaticResource AreaCvt},ConverterParameter=mm}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <Expander Header="Check max area" Margin="5" IsExpanded="{Binding IsMaxAreaChecked}">
                <GroupBox Header="Max area" Margin="0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <xctk:DoubleUpDown Value="{Binding MaxArea}"  AllowTextInput="True" Minimum="0" Maximum="999999"/>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Content="um²" Grid.Column="0" Margin="2"
                             IsChecked="{Binding MaxAreaUnit,Converter={StaticResource AreaCvt},ConverterParameter=um}"/>
                            <RadioButton Content="mm²" Grid.Column="1" Margin="2"
                             IsChecked="{Binding MaxAreaUnit,Converter={StaticResource AreaCvt},ConverterParameter=mm}"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Expander>
            <CheckBox Content="Follow concave contour" Margin="2" IsChecked="{Binding IsConcaveChecked}"/>
            <CheckBox Content="Contour across boundary" Margin="2" IsChecked="{Binding IsBoundaryChecked}"/>
        </StackPanel>
    </Expander>
</UserControl>
