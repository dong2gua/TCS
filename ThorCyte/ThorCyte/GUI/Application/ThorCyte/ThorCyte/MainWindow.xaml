<Window x:Class="ThorCyte.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:ThorCyte.Infrastructure.Commom;assembly=ThorCyte.Infrastructure"
        xmlns:controls="clr-namespace:ThorCyte.Infrastructure.Controls;assembly=ThorCyte.Infrastructure"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="MainWindow" Height="1024" Width="1280" Style ="{StaticResource {x:Type Window}}" Icon="ThorCyte.png" MinWidth="1280" MinHeight="1024" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="{x:Static inf:RegionNames.HeadRegion}"/>
        <ContentControl DockPanel.Dock="Left" regions:RegionManager.RegionName="{x:Static inf:RegionNames.TabRegion}" />
        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition x:Name="RightCol" Width="0"/>
            </Grid.ColumnDefinitions>
            <ContentControl  DockPanel.Dock="Right" regions:RegionManager.RegionName="{x:Static inf:RegionNames.MainRegion}"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch">
                <i:Interaction.Behaviors>
                    <controls:DoubleClickCollapseGridSplitterBehavior />
                </i:Interaction.Behaviors>
            </GridSplitter>
            <Border BorderThickness="1" BorderBrush="CadetBlue" CornerRadius="5" Grid.Column="2">
                <DockPanel >
                    <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="{x:Static inf:RegionNames.ReviewCarrierRegion}"/>
                    <controls:DockPanelSplitter DockPanel.Dock="Top"/>
                    <ContentControl DockPanel.Dock="Bottom" regions:RegionManager.RegionName="{x:Static inf:RegionNames.ScanInfoRegion}" />
                </DockPanel>

            </Border>
        </Grid>
    </DockPanel>
</Window>
